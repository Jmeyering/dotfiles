#! /bin/bash

sudo add-apt-repository ppa:aguignard/ppa -y
sudo apt-get update

#####################
## Install i3 deps ##
#####################
sudo apt install \
  acpi \
  autoconf \
  libxcb1-dev \
  libxcb-keysyms1-dev \
  libpango1.0-dev \
  libxcb-util0-dev \
  libxcb-icccm4-dev \
  libyajl-dev \
  libstartup-notification0-dev \
  libxcb-randr0-dev \
  libev-dev \
  libxcb-cursor-dev \
  libxcb-xinerama0-dev \
  libxcb-xkb-dev \
  libxkbcommon-dev \
  libxkbcommon-x11-dev \
  libxcb-xrm-dev \
  libxcb-xrm-dev \
  lxappearance \
  -y



#######################
## Build i3 from src ##
#######################
git clone https://www.github.com/Airblader/i3 i3-gaps

cd i3-gaps

autoreconf --force --install
rm -rf build/
mkdir -p build && cd build/

../configure --prefix=/usr --sysconfdir=/etc --disable-sanitizers
make
sudo make install

cd ../../
rm -rf i3-gaps


##############################################
## Install Lightweight support applications ##
##############################################
sudo add-apt-repository ppa:font-manager/staging
sudo apt-get update

sudo apt install \
  i3lock \
  thunar \
  blueman \
  pavucontrol \
  wicd \
  xautolock \
  shutter \
  compton \
  font-manager \
  -y

#############################
## Build i3blocks from src ##
#############################
git clone git://github.com/vivien/i3blocks
cd i3blocks
sudo make clean debug
sudo make install

cd ../
rm -rf i3blocks
