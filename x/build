#! /bin/bash

dir=$(pwd)

chmod +x install/*

mkdir -p ~/.fonts/
wget -O ~/.fonts/MaterialIcons-Regular.ttf \
  https://github.com/google/material-design-icons/raw/master/iconfont/MaterialIcons-Regular.ttf

wget https://use.fontawesome.com/releases/v5.0.8/fontawesome-free-5.0.8.zip
unzip fontawesome-free-5.0.8.zip -d ~/.fonts/

sudo apt-get update -y

install/dunst &&
install/rofi &&
install/dnsmasq &&
install/nitrogen &&
install/arc-theme &&
install/rxvt &&
install/i3

rm ~/.Xresources
rm ~/.i3blocks.conf
rm -rf ~/.config/dunst
rm -rf ~/.config/i3
rm -rf ~/.config/nitrogen
rm ~/.config/compton.conf
sudo rm /etc/dnsmasq.d/test

ln -s $dir/.Xresources ~/.Xresources
ln -s $dir/.config/compton.conf ~/.config/
ln -s $dir/.i3blocks.conf ~/
sudo ln -s $dir/dnsmasq-test.conf /etc/dnsmasq.d/test

ln -s $dir/.config/dunst ~/.config/
ln -s $dir/.config/i3 ~/.config/
ln -s $dir/.config/nitrogen ~/.config/

sudo /etc/init.d/dnsmasq restart
